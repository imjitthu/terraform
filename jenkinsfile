pipeline {

    agent any

    parameters {
    choice(name: 'tfaction', choices: ['init', 'plan', 'apply', 'destroy'], description: 'Pick any action')
               }

    stages {
        stage ('Creating infra for RoboShop') {
            steps {
                sh '''
                terraform init
                terraform destroy -auto-approve
                '''
                }
            }
        }
    }